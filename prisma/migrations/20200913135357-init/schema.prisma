datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String            @default(cuid()) @id
  username         String
  password         String
  drinkingLocation DrinkingLocation
  profile          Profile
}

model DrinkingLocation {
  id           String   @default(cuid()) @id
  locationName String
  longtitude   Float
  latitude     Float
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
}

model Profile {
  id     String @default(cuid()) @id
  image  String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
